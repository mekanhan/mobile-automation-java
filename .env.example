# ========================================
# Mobile Automation Framework Configuration
# ========================================
# Copy this file to .env and update with your values

# ==================
# Platform Settings
# ==================
DEFAULT_PLATFORM=ios                    # Options: ios, android
DEFAULT_DEVICE_TYPE=simulator           # Options: simulator, emulator, real

# ==================
# iOS Configuration
# ==================
IOS_APP_PATH=./apps/SampleApp.app      # Path to iOS app
IOS_DEVICE_NAME=iPhone 15               # Device name for simulator
IOS_PLATFORM_VERSION=17.0               # iOS version
IOS_UDID=                               # UDID for real device (optional)
IOS_TEAM_ID=                            # Team ID for real device (optional)
IOS_SIGNING_ID=                         # Signing ID for real device (optional)
IOS_XCODEORG_ID=                        # XCode Org ID (optional)
IOS_XCODECONFIG_FILE=                   # XCode config file path (optional)
IOS_WDA_PORT=8100                       # WebDriverAgent port

# ==================
# Android Configuration
# ==================
ANDROID_APP_PATH=./apps/SampleApp.apk  # Path to Android app
ANDROID_APP_PACKAGE=com.example.app    # App package name
ANDROID_APP_ACTIVITY=.MainActivity      # Main activity
ANDROID_DEVICE_NAME=Pixel_7_API_34     # Device/emulator name
ANDROID_PLATFORM_VERSION=14             # Android version
ANDROID_AVD_NAME=                       # AVD name for emulator
ANDROID_SYSTEM_PORT=8200                # System port for parallel execution
ANDROID_CHROMEDRIVER_PORT=9515          # ChromeDriver port

# ==================
# Appium Settings
# ==================
APPIUM_SERVER_HOST=0.0.0.0             # Appium server host
APPIUM_SERVER_PORT=4723                 # Appium server port
APPIUM_NEW_COMMAND_TIMEOUT=240         # Command timeout in seconds
APPIUM_LOG_LEVEL=info                   # Log level: error, warn, info, debug

# ==================
# Test Configuration
# ==================
DEFAULT_TIMEOUT=30000                   # Default wait timeout in ms
IMPLICIT_WAIT=5000                      # Implicit wait in ms
PAGE_LOAD_TIMEOUT=30000                 # Page load timeout in ms
SCRIPT_TIMEOUT=30000                    # Script execution timeout in ms
MAX_RETRY_COUNT=3                        # Max retries for failed tests
PARALLEL_INSTANCES=2                     # Number of parallel test instances

# ==================
# Test Data
# ==================
TEST_ENV=staging                        # Environment: dev, staging, prod
BASE_URL=https://example.com           # Base URL for API tests
API_KEY=                                # API key for backend tests
TEST_USERNAME=testuser@example.com     # Default test username
TEST_PASSWORD=TestPass123!             # Default test password

# ==================
# Reporting
# ==================
SCREENSHOT_ON_FAIL=true                 # Take screenshot on test failure
VIDEO_RECORDING=false                   # Record video of test execution
GENERATE_ALLURE_REPORT=true            # Generate Allure report
GENERATE_HTML_REPORT=true              # Generate HTML report
REPORT_PORTAL_ENABLED=false            # Enable ReportPortal integration
REPORT_PORTAL_TOKEN=                   # ReportPortal token
REPORT_PORTAL_ENDPOINT=                # ReportPortal endpoint

# ==================
# CI/CD Settings
# ==================
CI_MODE=false                           # Running in CI environment
BUILD_NUMBER=local                      # Build number for reports
BRANCH_NAME=local                       # Git branch name
SLACK_WEBHOOK_URL=                     # Slack webhook for notifications
TEAMS_WEBHOOK_URL=                     # MS Teams webhook

# ==================
# Cloud Testing (Optional)
# ==================
USE_CLOUD=false                         # Use cloud testing service
SAUCE_USERNAME=                         # SauceLabs username
SAUCE_ACCESS_KEY=                       # SauceLabs access key
BROWSERSTACK_USERNAME=                  # BrowserStack username
BROWSERSTACK_ACCESS_KEY=                # BrowserStack access key

# ==================
# Advanced Options
# ==================
DEBUG_MODE=false                        # Enable debug logging
HEAP_SIZE=4096                          # Node.js heap size in MB
DISABLE_ANIMATIONS=true                 # Disable app animations
CLEAR_APP_DATA=true                     # Clear app data before test
RESET_APP=false                         # Reset app state
FULL_RESET=false                        # Full app reset
NO_RESET=true                          # Don't reset app between tests