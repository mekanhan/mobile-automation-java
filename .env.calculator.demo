# ========================================
# Calculator Demo Configuration
# ========================================
# Simple configuration for Calculator app demo

# ==================
# Platform Settings
# ==================
DEFAULT_PLATFORM=android                    # Android only for Calculator demo
DEFAULT_DEVICE_TYPE=emulator               # Use emulator for demo

# ==================
# Android Calculator Configuration
# ==================
ANDROID_APP_PACKAGE=com.google.android.calculator    # Google Calculator package
ANDROID_APP_ACTIVITY=com.android.calculator2.Calculator  # Main Calculator activity
ANDROID_DEVICE_NAME=Android Device         # Generic device name (works with any connected device)
ANDROID_PLATFORM_VERSION=11               # Compatible with Android 11+
ANDROID_SYSTEM_PORT=8200                   # System port for UiAutomator2

# Alternative Calculator packages for different Android versions:
# ANDROID_APP_PACKAGE=com.android.calculator2
# ANDROID_APP_ACTIVITY=.Calculator

# ==================
# Appium Settings
# ==================
APPIUM_SERVER_HOST=127.0.0.1              # Local Appium server
APPIUM_SERVER_PORT=4723                    # Standard Appium port
APPIUM_NEW_COMMAND_TIMEOUT=60              # 60 seconds timeout
APPIUM_LOG_LEVEL=info                      # Log level for debugging

# ==================
# Test Configuration
# ==================
DEFAULT_TIMEOUT=10000                      # 10 seconds default timeout
IMPLICIT_WAIT=5000                         # 5 seconds implicit wait
MAX_RETRY_COUNT=2                          # 2 retries for stability
PARALLEL_INSTANCES=1                       # Single instance for demo

# ==================
# Demo Settings
# ==================
TEST_ENV=demo                              # Demo environment
SCREENSHOT_ON_FAIL=true                    # Capture failures
VIDEO_RECORDING=false                      # No video recording for demo
GENERATE_HTML_REPORT=true                  # Generate HTML report
DEBUG_MODE=false                           # Standard logging

# ==================
# App Behavior
# ==================
NO_RESET=false                             # Fresh start each test
FULL_RESET=false                           # Don't reinstall app
CLEAR_APP_DATA=false                       # Keep calculator state clean
AUTO_GRANT_PERMISSIONS=true                # Auto-grant permissions